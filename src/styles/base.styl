html, body
	height 100vh
	margin 0
	padding 0
	background #343434
	color #E9EAD8
	overflow hidden
  
a
	color #E9EAD8
	text-decoration none !important
	&:visited, &:active
		color #E9EAD8

.text-8bit 
	font-family 'Press Start 2P'

.ch-brand
	position absolute
	right 2vw
	top 2vh
	color #FD4949
	font-family 'Press Start 2P'

.screen-center
	padding-top 20vh
	width 30vw 
	margin 0 auto
	text-align center 

.console-list 
	width 30vw
	margin 0
	padding 0
	
	.console-title
		font-size 4vh
		opacity 0
		-webkit-transition opacity 0.2s linear
		color #E9EAD8
	
	.console-list-item
		list-style-type none
		padding 0
		margin 0 0
		position relative
		top 0
		min-width 100%
		opacity 0.3
		-webkit-transition all 0.5s ease-in-out
		
		&.active
			opacity 1.0

			.console-title 
				opacity 1.0 !important
		
		& a > b.ci-icon
			font-size 40vh
			color #E9EAD8 !important

